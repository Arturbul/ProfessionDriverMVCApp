@model ProfessionDriver.ViewModels.EntityViewModel

@{
    ViewBag.Title = "Edit Entity";
}

<h1>@ViewBag.Title</h1>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="EntityId"/>
    <div>
        <label asp-for="EntityName">Entity name</label>
        <input asp-for="EntityName" />
        <span asp-validation-for="EntityName"></span>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Save"/>
    </div>
</form>
<div>
    <form>
        <button asp-action="Index" class="btn btn-secondary">Go back</button>
    </form>
</div>